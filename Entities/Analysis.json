{
  "name": "Analysis",
  "type": "object",
  "properties": {
    "original_text": {
      "type": "string",
      "description": "The original comment text submitted for analysis"
    },
    "classification": {
      "type": "string",
      "enum": [
        "safe",
        "offensive",
        "hate_speech",
        "toxic"
      ],
      "description": "The toxicity classification result"
    },
    "confidence": {
      "type": "number",
      "description": "Confidence score of the classification (0-100)"
    },
    "emotions": {
      "type": "object",
      "description": "Emotion intensity scores",
      "properties": {
        "anger": {
          "type": "number"
        },
        "fear": {
          "type": "number"
        },
        "sadness": {
          "type": "number"
        },
        "disgust": {
          "type": "number"
        },
        "joy": {
          "type": "number"
        }
      }
    },
    "rewritten_text": {
      "type": "string",
      "description": "The safe, respectful rewritten version"
    },
    "processing_time_ms": {
      "type": "number",
      "description": "Time taken to process in milliseconds"
    }
  },
  "required": [
    "original_text",
    "classification"
  ]
}